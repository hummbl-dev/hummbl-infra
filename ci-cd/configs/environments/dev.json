{
  "$schema": "../../../schemas/environment.schema.json",
  "environment": "dev",
  "description": "Development environment - rapid iteration",

  "deployment": {
    "strategy": "rolling",
    "replicas": {
      "min": 1,
      "max": 3,
      "desired": 1
    },
    "rollingUpdate": {
      "maxUnavailable": 0,
      "maxSurge": 1
    },
    "timeoutSeconds": 300
  },

  "resources": {
    "requests": {
      "cpu": "100m",
      "memory": "256Mi"
    },
    "limits": {
      "cpu": "500m",
      "memory": "512Mi"
    }
  },

  "healthCheck": {
    "enabled": true,
    "path": "/health",
    "port": 3000,
    "initialDelaySeconds": 5,
    "periodSeconds": 10,
    "timeoutSeconds": 5,
    "successThreshold": 1,
    "failureThreshold": 3
  },

  "networking": {
    "tlsEnabled": false,
    "ingressEnabled": true,
    "hostnames": ["dev.hummbl.local"]
  },

  "approvalGates": {
    "required": false
  },

  "promotion": {
    "canPromoteTo": ["staging"],
    "requiresTests": false
  },

  "observability": {
    "logLevel": "debug",
    "metricsEnabled": true,
    "tracingEnabled": true
  },

  "compliance": {
    "signedImages": false,
    "sbomRequired": false
  }
}
